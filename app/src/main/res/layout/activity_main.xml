<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản Lý Nhân Vien"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/mau_xanh"
        android:layout_gravity="center">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mã NV"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp">

        </TextView>

        <EditText
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="mã nhân viên"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/edit_manv">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên NV"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp">

        </TextView>

        <EditText
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="tên nhân viên"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/edit_namenv">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp">

        </TextView>

        <RadioGroup
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/rdbt_nam">

            </RadioButton>

            <RadioButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/rdbt_nu">

            </RadioButton>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập NV"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/bt_add"
        android:layout_gravity="center">

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Danh Sách Nhân Viên"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@color/mau_xanh">

        </TextView>

        <ImageButton
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:id="@+id/img_deleteall">

        </ImageButton>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list">

    </ListView>
</LinearLayout>